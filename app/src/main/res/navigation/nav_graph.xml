<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/intro_screen">

    <fragment
        android:id="@+id/intro_screen"
        android:name="com.example.assignment3.intro_screen"
        android:label="fragment_intro_screen"
        tools:layout="@layout/fragment_intro_screen" >
        <action
            android:id="@+id/action_introScreen_to_resultFragment"
            app:destination="@id/resultFragment"/>
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.assignment3.ResultFragment"
        android:label="fragment_results"
        tools:layout="@layout/fragment_result" >
        <action
            android:id="@+id/action_resultFragment_to_detailFragment"
            app:destination="@id/detailFragment">
            <arguments
                android:name="movie_id"
                app:argType="string"

                />
        </action>
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.assignment3.DetailFragment"
        android:label="DetailFragment" />
</navigation>